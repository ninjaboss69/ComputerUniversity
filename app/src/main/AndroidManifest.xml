<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sailaminoak.computeruniversity">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/universityiconthree"
        android:label="@string/app_name"
        android:roundIcon="@drawable/universityiconthree"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComputerUniversity">
        <activity android:name=".ShopeOrder"></activity>
        <activity android:name=".AllLists" />
        <activity android:name=".CurrentCart" />
        <activity android:name=".Shop_Detail_View" />
        <activity android:name=".UCSMShop" />
        <activity android:name=".OnlineCourseReader" />
        <activity android:name=".ViewingDetailsOfACourse" />
        <activity android:name=".courses_online" />
        <activity android:name=".SplashScreen" />
        <activity android:name=".Verification" />
        <activity android:name=".OnlineCourses" />
        <activity android:name=".Setting" />
        <activity android:name=".AboutSoftware" />
        <activity android:name=".favoritePostsInformation" />
        <activity android:name=".LoadFromDatabase" />
        <activity android:name=".ViewAll" />
        <activity android:name=".Read" />
        <activity android:name=".Tops" />
        <activity android:name=".Club" />
        <activity android:name=".Canteen" />
        <activity android:name=".Student_Information" />
        <activity android:name=".Result" />
        <activity android:name=".StudentSupport" />
        <activity android:name=".Announcement" />
        <activity android:name=".AcademicCalendar" />
        <activity android:name=".WeekViewActivity" />
        <activity android:name=".todolist" />
        <activity android:name=".Mentor_Information" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".NotificationReceiver">
            <intent-filter>
                <action android:name="android.media.action.DISPLAY_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service
            android:name=".FirebaseMessagingService"
            android:permission="TODO"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>